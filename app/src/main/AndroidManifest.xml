<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ip.histospot.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProfileActivity" />
        <activity android:name=".GameActivity" />
        <activity android:name=".PlayersActivity" />
        <activity android:name=".HistoryActivity" />
        <activity android:name=".LessonsActivity" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.LeaderboardActivity" />
        <activity android:name=".activities.DuelActivity" />
        <activity android:name=".activities.LearnActivity" />
        <activity android:name=".activities.SearchActivity" />
        <activity android:name=".activities.VersusActivity" />
        <activity android:name=".activities.VersusDuelActivity"></activity>
    </application>

</manifest>