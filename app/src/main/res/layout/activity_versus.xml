<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ip.histospot.android.activities.VersusActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:text="Name VS Name"
            android:textStyle="bold"
            android:gravity="center|start"
            android:layout_toLeftOf="@+id/search"
            android:textColor="@color/colorTextOnPrimary"
            android:textSize="18sp"/>
    </RelativeLayout>
    <include
        layout="@layout/no_internet_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/youImage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/default_profile"
            app:civ_border_color="@color/colorSecondary"
            app:civ_border_width="1dp"
            android:layout_weight="1"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/otherImage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/default_profile"
            app:civ_border_color="@color/colorSecondary"
            app:civ_border_width="1dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/youName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="name"/>
        <TextView
            android:id="@+id/otherName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="name"/>
    </LinearLayout>
</LinearLayout>

