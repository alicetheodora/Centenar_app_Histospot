<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_row"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="1"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"/>

    <RelativeLayout
        android:layout_width="@dimen/search_row"
        android:layout_height="@dimen/search_row"
        android:layout_marginLeft="8dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picture"
            android:layout_width="@dimen/search_row"
            android:layout_height="match_parent"
            android:src="@drawable/default_profile"
            app:civ_border_color="@color/colorSecondary"
            app:civ_border_width="1dp" />
        <TextView
            android:id="@+id/level"
            android:layout_width="@dimen/search_row_level"
            android:layout_height="@dimen/search_row_level"
            android:text="1"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/circle"
            android:textAlignment="center"
            android:gravity="center"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nume"
            android:layout_toLeftOf="@+id/points"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"/>
        <Button
            android:id="@+id/follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32dp"
            android:minHeight="32dp"
            android:background="@color/colorSecondary"
            android:textColor="@color/colorTextOnSecondary"/>
    </RelativeLayout>
</LinearLayout>