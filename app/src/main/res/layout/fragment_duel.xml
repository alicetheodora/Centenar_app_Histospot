<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_toLeftOf="@+id/search"
                android:gravity="center|start"
                android:text="@string/duel_title"
                android:textColor="@color/colorTextOnPrimary"
                android:textSize="32sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/leaderboard"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:background="#00000000"
                android:src="@drawable/ic_person_add_white_36dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                android:id="@+id/addDuel"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="incepe duelul!"
                android:textColor="@color/colorTextOnSecondary"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_default"

                />

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>